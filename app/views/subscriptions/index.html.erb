<p style="color: green"><%= notice %></p>

<% content_for :title, "Subscriptions" %>

<h1 class="text-3xl font-bold">Subscriptions</h1>
<div class="mt-3 flex flex-col">
  <div>Avg. Recurring Expenses</div>
  <div class="py-2 text-3xl font-bold"><%= number_to_currency(@average_recurring_expenses, unit: currency_symbol("THB")) %></div>
  <div>Monthly</div>
</div>

<div class="flex">
  <%= link_to "New subscription", new_subscription_path, class: "ml-auto inline-block bg-blue-600 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-700 transition" %>
</div>

<div id="subscriptions">
  <table class="w-full table-auto border-collapse text-sm">
    <thead>
      <tr>
        <th class="border-b border-gray-200 p-4 pt-0 pb-3 pl-8 text-left font-medium text-gray-400">Name</th>
        <th class="border-b border-gray-200 p-4 pt-0 pb-3 pl-8 text-left font-medium text-gray-400">Cost</th>
        <th class="border-b border-gray-200 p-4 pt-0 pb-3 pl-8 text-left font-medium text-gray-400">Billing period</th>
        <th class="border-b border-gray-200"></th>
      </tr>
    </thead>
    <tbody class="bg-white">
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td class="border-b border-gray-100 p-4 pl-8 text-gray-500"><%= subscription.name %></td>
        <td class="border-b border-gray-100 p-4 pl-8 text-gray-500"><%= number_to_currency(subscription.cost, unit: currency_symbol(subscription.currency)) %></td>
        <td class="border-b border-gray-100 p-4 pl-8 text-gray-500"><%= subscription.billing_period %></td>
        <td class="border-b border-gray-100 p-4 pl-8 text-gray-500">
          <%= link_to "Show", subscription %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
